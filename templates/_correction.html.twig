    <div class="col-12"><h2>{{app.session.get('correction')|retourChariot|raw}}</h2></div>
    {% if not(nbQuestions is defined) %}
    {%   set nbQuestions = 6 %}
    {% endif %}
    {% if app.session.get('media') is defined %}
      {% if app.session.get('media')|length > 2 %}
    <div class="positionAbsolue" style="top:150px; right : 100px;">
      <audio controls controlsList="nodownload" src="{{son_path}}{{app.session.get('media')}}.mp3">
    </div>
    <div class="positionAbsolue" style="top:210px; right : 100px;">
      <img style="width : 300px; height : auto;" src="{{img_path}}instruments/{{app.session.get('media')}}.jpg">
    </div>
      {% endif %}
    {% endif %}
      {% if app.session.get('numQuestion') < nbQuestions  %}
      <div class="col-5 cadreReponse">
        <a href="{{app.session.get('exercice')}}">Question suivante</a>
      </div>
      {% else %}
      <div class="col-12">
        <h2>Ton score est de {{app.session.get('nbBonnesRep')}}/{{nbQuestions}}.&nbsp;
        {% if app.session.get('nbBonnesRep') >= nbQuestions %}
        Tu passes au niveau {{app.session.get('niveau')+1}}. Félicitations !
        {% endif %}
        </h2>
      </div>
      <div class="col-3 cadreReponse">
        <a href="main">Revenir à la page principale</a>
      </div>
      {% endif %}