{% extends "page.html.twig" %}

{% block entete %}
  {{ parent() }}
<style>

*, *::before, *::after {
  box-sizing: border-box;
}

html {
  min-height: 100%;
}

.container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);  
}

input {
  position: absolute;
  left: -9999px;
}

label {
  display: block;
  position: relative;
  margin: 20px;
  padding: 15px 30px 15px 62px;
  border: 3px solid #fff;
  border-radius: 100px;
  color: #fff;
  background-color: grey; /*#6a8494; Couleur sans coche */
  box-shadow: 0 0 20px rgba(0, 0, 0, .2);
  white-space: nowrap;
  cursor: pointer;
  user-select: none;
  transition: background-color .2s, box-shadow .2s;
}

label::before {
  content: '';
  display: block;
  position: absolute;
  top: 10px;
  bottom: 10px;
  left: 10px;
  width: 32px;
  border: 3px solid #fff;
  border-radius: 100px;
  transition: background-color .2s;
}

label:first-of-type {
  transform: translateX(-40px);
}

label:last-of-type {
  transform: translateX(40px);
}

label:hover, input:focus + label {
  box-shadow: 0 0 20px rgba(0, 0, 0, .6);
}

input:checked + label {
  background-color: lightblue; /* #ab576c; Couleur avec coche */
}

input:checked + label::before {
  background-color: lightblue;
}
</style>

{% endblock %}

{% block corps %}
  {{ parent() }}
{% endblock %}

{% block titre %}
  {{ app.session.get('titreExo') | capitalize }}
{% endblock %}

{% block page %}
  {{ parent() }}
<div class="container">
  <div class="row">
    <div class="col-12">
      <b class="souligne">Question {{app.session.get('numQuestion')}} :</b>&nbsp;
      <b>{{ app.session.get('texteQuestion') }}</b>
    </div>
    <div class="col-12"><img class="imgSymbole" src="{{img_path}}portee/{{app.session.get('question').reponse.symbole}}.gif"></div>
    {% if app.session.get('correction')|length > 0 %}
      {% include '_correction.html.twig' %}
    {% else %}
      <form method="POST" action="{{app.session.get('exercice')}}Correction1" class="col-12">
      <div class="container-fluid">
        <div class="row">
      {% for p in app.session.get('question').propositions %}
      <div class="col-3 contenantCadreReponse">
          <input type="checkbox" name="reponse[]" value="{{p.ordre}}" id="cb_{{loop.index}}"><label for="cb_{{loop.index}}">{{p.nom}}</label>
      </div>
      <div class="col-1 contenantCadreReponse">
      </div>
      {% endfor %}
      <div class="col-3 cadreReponse">
        <input type="submit" content="Valider ma réponse">
      </div>
        </div>
      </div>
     </form>
    {% endif %}
  </div>
</div>
{% endblock %}