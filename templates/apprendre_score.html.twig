                    <img class="micro" src="{{img_path}}trophees/{{trophee.image}}">
                    <img class="micro2" src="{{img_path}}trophees/{{trophee.image}}">
                  </td>
                  <td>
                    <dl>
                      <dt><b>{{trophee.nom}}</b></dt>
                      <dd>{{trophee.description}}</dd>
                    </dl>
                  </td>
                </tr>
              {% endfor %}
              </table>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

{% endblock %}