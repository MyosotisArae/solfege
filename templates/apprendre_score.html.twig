{% extends "apprendre.html.twig" %}

{% block entete %}
  {{ parent() }}
  <link rel="stylesheet" href="{{css_path}}apprendre_score.css">
{% endblock %}


{% block titre %}Les troph√©es{% endblock %}

{% block corps %}
  {{ parent() }}

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="listeDeroulante">

        <div class="container-fluid">
          <div class="row">
            <div class="offset-1 col-11">
              <table>
              {% for trophee in trophees %}
