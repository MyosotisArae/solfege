{% extends 'base.html.twig' %}

{% block page %}

{% include "_barreNotes.html.twig" %}

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="h3 mb-3 font-weight-normal">Créez un nouveau compte</h1>
    </div>
    <div class="col-3">
    </div>
    <div class="col-5">

      {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.genre) }}

        <button class="btn btn-lg btn-primary">Register</button>
      {{ form_end(registrationForm) }}
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-8">
    </div>
    <div class="col-4">
      <form action="/login">
          <br>
          Vous avez déjà un compte ?
          <button class="btn btn-lg btn-primary" type="submit">
            Connectez-vous
          </button>
      </form>
    </div>
  </div>
</div>
{% include "_barreNotes.html.twig" %}

{% endblock %}
