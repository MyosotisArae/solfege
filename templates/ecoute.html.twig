{% extends "page.html.twig" %}

{% block entete %}
  {{ parent() }}
{% endblock %}

{% block corps %}
  {{ parent() }}
{% endblock %}

{% block titre %}
  {{ app.session.get('titreExo') | capitalize }}
{% endblock %}

{% block page %}
  {{ parent() }}
<div class="container">
  <div class="row">
    <div class="col-12">
      <b class="souligne">Question {{app.session.get('numQuestion')}} :</b>
      <b>Quel est l'instrument utilisé dans ce morceau ?</b><br>
      <audio controls src="{{music_path}}test.wav">
        Audio non géré.
      </audio>
      <br><br>
    </div>
    {% if app.session.get('correction')|length > 0 %}
      {% include '_correction.html.twig' %}
    {% else %}
  </div>
</div>
<div class="container-fluid">
  <div class="row">
      {% for p in app.session.get('question').propositions %}
    <div class="offset-1 col-3 contenantCadreReponse">
      <div class="cadreReponse">
        <a href="{{app.session.get('exercice')}}Correction{{loop.index0}}">{{p.description}}</a>
      </div>
    </div>
      {% endfor %}
    {% endif %}
  </div>
</div>
{% endblock %}